{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<mein class="mein">
	<section class="form">
		{{#with data}}
		{{!-- {{#each list}} --}}
		<form method="POST" action="/product-edit">

			<h1 class="form__title-name">Інформація про товар</h1>

			<div class="form__card">
				<div class="form__element">
					<label for="name" class="form__label">Назва товару</label>
					<input type="name" name="name" class="form__input" value="{{name}}">
				</div>

				<div class="form__element">
					<label for="price" class="form__label">Ціна ($)</label>
					<input type="price" name="price" class="form__input" value="{{price}}">
				</div>

				<div class="form__element">
					<label for="id" class="form__label">ID</label>
					<input type="id" name="id" class="form__input" value="{{id}}">
				</div>
			</div>

			<div class="form__info">
				<label for="description" class="form__description-top">Короткий опис товару</label>
				<input type="description" name="description" class="form__description" value="{{description}}">
				<p class="form__description-bottom">Короткий опис товару</p>
			</div>

			<div class="form__bottom">
				<button class="form__button-left">Зберегти оновлення</button>
				<a href="product-delete?id={{id}}" class="form__button-right">Видалити товар</a>
			</div>


		</form>
		{{!-- {{/each}} --}}
		{{/with}}
	</section>
</mein>

